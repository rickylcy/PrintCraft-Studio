root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Donâ€™t trim trailing spaces in Markdown (they can mean line breaks)
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefiles need tabs
[Makefile]
indent_style = tab

# Common web files (explicit, but inherits indent_size=2)
[*.{js,jsx,ts,tsx,css,scss,html,json,mdx,vue,prisma,yml,yaml}]
indent_size = 2
