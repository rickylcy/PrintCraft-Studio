generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // dev with SQLite; swap to mysql later
  url      = env("DATABASE_URL")
}

model Template {
  id          String   @id @default(cuid())
  name        String
  type        String   @default("escpos")
  contentJson String
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  profileId String?
  profile   PrinterProfile? @relation(fields: [profileId], references: [id])

  jobs Job[]
}

model PrinterProfile {
  id         String   @id @default(cuid())
  name       String
  type       String   @default("escpos")
  device     String?
  widthDots  Int      @default(576)
  codepage   String   @default("cp437")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // NEW
  marginLeftDots    Int @default(0)
  marginRightDots   Int @default(0)
  marginTopDots     Int @default(0)
  marginBottomDots  Int @default(0)

  templates  Template[]
}


model Job {
  id          String   @id @default(cuid())
  templateId  String?
  payloadJson String
  status      String   @default("queued") // 'queued' | 'ok' | 'error' | 'preview'
  device      String?
  bytes       Int?
  error       String?
  agentJobId  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  template Template? @relation(fields: [templateId], references: [id])

  @@index([templateId])
}
